{
    "swagger": "2.0",
    "info": {
      "title": "Stock Portfolio App",
      "description": "An API that can be used to manage basic functionalities of a stock portfolio. Buy and sell operations can be performed on NASDAQ stocks at live prices.",
      "version": "1.0"
    },
    "basePath": "/api",
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/dashboard": {
        "get": {
          "summary": "Returns the stock dashboard.",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Successful response.",
              "schema": {
                "type": "object",
                "properties": {
                    "stocks": List,
                    "invested_amount": stock_service.calculate_invested_amount()[0],
                    "net_worth": net_worth,
                    "realized_profit": realized_profit,
                    "total_current_profit": total_current_profit,
                    "holdings": holdings,
                    "transactions": transactions,
                    "profit": profit_print
                }
              }
            }
          }
        }
      }
    }
  }